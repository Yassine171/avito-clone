<div class="max-w-md mx-auto p-4 bg-gray-100 border border-gray-300 rounded">
  <h2 class="text-xl font-bold mb-4">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, "New password", class: "block font-bold mb-2" %>
      <% if @minimum_password_length %>
        <small class="text-gray-500">(minimum <%= @minimum_password_length %> characters)</small>
      <% end %>
      <%= f.password_field :password, class: "form-input mt-1 block w-full rounded-md border-gray-300 py-2 px-3 leading-5 shadow-sm focus:outline-none focus:border-blue-300 focus:shadow-outline-blue transition duration-150 ease-in-out sm:text-sm sm:leading-5", autocomplete: "new-password" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm new password", class: "block font-bold mb-2" %>
      <%= f.password_field :password_confirmation, class: "form-input mt-1 block w-full rounded-md border-gray-300 py-2 px-3 leading-5 shadow-sm focus:outline-none focus:border-blue-300 focus:shadow-outline-blue transition duration-150 ease-in-out sm:text-sm sm:leading-5", autocomplete: "new-password" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "Change my password", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue focus:ring-2 ring-offset-current ring-offset-2 transition-colors duration-300 ease-in-out" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
