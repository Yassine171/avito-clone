<main class="bg-white min-h-screen">
  <div class="flex flex-col md:flex-row items-center max-w-screen-xl mx-auto pt-8 pb-16 px-4 md:px-8" style="flex-flow: row wrap;">

    <div class="md:w-1/2 mb-8 md:mb-0">
      <%= image_tag "https://firebasestorage.googleapis.com/v0/b/landing-gen-dev-25ef8.appspot.com/o/1669321113025-602-logincrea.png?alt=media&token=ef9d568d-c3c0-4e1f-9fe1-c5b10061d00b", alt: "Create an account on Avito.ma", class: "w-full no-underline" %>
    </div>

    <div class="md:max-w-61 md:w-1/2 flex-grow box-border">
      <div class="pr-2 pb-16 pl-2 m-auto max-w-lg">
        <h2 class="text-2xl font-bold mb-4">Connectez-vous à Avito</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mb-4"}) do |f| %>
          <div class="mb-4">
            <%= f.label :email, class: "block text-gray-700 font-bold mb-2" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
          </div>

        <div class="mb-4">
            <%= f.label :password, class: "block text-gray-700 font-bold mb-2" %>
            <%= f.password_field :password, autocomplete: "current-password" , class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
           <div class="text-right mt-2">
            <button id="forgot-password-button" class="text-blue-500 font-bold no-underline" data-modal-target="forgotPpasswordModal" data-modal-toggle="forgotPpasswordModal" type="button">Mot de passe oublié ?</button>
          </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-6">
              <%= f.check_box :remember_me, class: "mr-2 leading-tight" %>
              <%= f.label :remember_me, class: "text-gray-700 font-bold" %>
            </div>
          <% end %>

          <div class="flex items-center justify-between">
            <%= f.submit "Se connecter", class: "w-full bg-blue-500 text-white font-bold py-2 px-4 rounded-lg uppercase" %>
          </div>
        <% end %>

            <div class="text-center mt-5">
              <p class="text-gray-700 mb-4">Pas encore inscrit?
                <%= link_to "S'inscrire gratuitement.", new_registration_path(resource_name), class: "text-blue-500 font-bold no-underline" %>
              </p>
            </div>
      </div>
    </div>
  </div>



</main>

<div id="forgotPpasswordModal" tabindex="-1" aria-hidden="true" class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center">
  <div class="relative bg-white rounded-lg shadow dark:bg-gray-700 p-7">
    <!-- Modal header -->
    <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
      <div class="w-full flex justify-center mb-4">
        <img src="https://www.avito.ma/phoenix-assets/imgs/ai/lost_password/lost_password_initial.png" alt="Modal Header Image">
      </div>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-target="forgotPpasswordModal"   data-modal-toggle="forgotPpasswordModal">
                    <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                    <span class="sr-only">Close modal</span>
                </button>
    </div>
    <!-- Modal body -->
    <div class="body">
      <%= render 'devise/passwords/new' %>
    </div>

  </div>
</div>
