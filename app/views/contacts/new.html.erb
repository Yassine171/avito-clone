<!-- app/views/contacts/new.html.erb -->

<div class="flex justify-center items-center h-screen">
  <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-3/4 rounded">
    <h1 class="text-2xl font-bold mb-4 text-center">Contact Us</h1>

    <%= form_with model: @contact, url: contacts_path do |form| %>
      <div class="mb-4">
        <%= form.label :name, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :name, class: "form-input mt-1 block w-full rounded-md border-gray-300 w-full" %>
      </div>

      <div class="mb-4">
        <%= form.label :email, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.email_field :email, class: "form-input mt-1 block w-full rounded-md border-gray-300" %>
      </div>

      <div class="mb-4">
        <%= form.label :subject, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_field :subject, class: "form-input mt-1 block w-full rounded-md border-gray-300" %>
      </div>

      <div class="mb-6">
        <%= form.label :message, class: "block text-gray-700 font-bold mb-2" %>
        <%= form.text_area :message, class: "form-input mt-1 block w-full rounded-md border-gray-300 h-48 resize-none" %>
      </div>

      <div class="flex items-center justify-center">
        <%= form.submit "Envoyer", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
